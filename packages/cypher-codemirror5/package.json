{
  "name": "cypher-codemirror5",
  "description": "Cypher query language integration with CodeMirror 5 editor",
  "keywords": [
    "cypher",
    "codemirror",
    "codemirror 5"
  ],
  "version": "1.0.0",
  "author": "Neo4j Inc.",
  "license": "GPL-3.0",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "src/cypher-codemirror5.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/neo4j-contrib/cypher-editor.git"
  },
  "bugs": {
    "url": "https://github.com/neo4j-contrib/cypher-editor/issues"
  },
  "scripts": {
    "build-lib": "babel --config-file ../../babel.config.js --extensions \".js\" --out-dir lib ./src",
    "build-es": "cross-env ES=true babel --config-file ../../babel.config.js --extensions \".js\" --out-dir es ./src",
    "build": "npm run build-lib && npm run build-es",
    "clean:build": "rimraf lib && rimraf es"
  },
  "files": [
    "src/*.d.ts",
    "css/",
    "es/",
    "lib/",
    "README.md"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "cypher-codemirror-base": "*",
    "cypher-editor-support": "*"
  },
  "peerDependencies": {
    "codemirror": "^5.65.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/plugin-transform-regenerator": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@types/codemirror": "5.60.5"
  }
}
